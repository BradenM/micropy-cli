    "version": "0.2.0",
    "configurations": [
        
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },
        {
            "name": "Python micropy init",
            "type": "python",
            "request": "launch",
            "console": "integratedTerminal",
            "module": "micropy.cli",
            "args": ["init"],
            "cwd": "${workspaceFolder}/temp",
            "env": {
                    "PYTHONPATH": "${workspaceFolder}"
            }
        }
    ]
}